@model IEnumerable<EmployersSalary.Models.Employer>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Employers</h2>
<p>
    @Html.ActionLink("New Employer", "New", "Employers", null, new { @class = "btn btn-primary" })
</p>
<table id="employers" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Gross Salary, $</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#employers").DataTable({
                ajax: {
                    url: "/api/employers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "firstName"
                        ,
                        render: function(data, type, employer) {
                            return "<a href='/employers/edit/" + employer.id + "'>" + employer.firstName + "</a>";
                        }
                    }
                    ,
                    {
                        data: "lastName",
                        render: function (data, type, movie) {
                            return "<a href='/employers/edit/" + movie.id + "'>" + movie.lastName + "</a>";
                        }
                    },
                    {
                        data: "netSalary",
                        render: function(data) {
                            return data * 1.32;
                        }
                    },
                    {
                        data: "id",
                        render: function(data) {
                            return "<button class='btn-link js-delete' data-movie-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });


            $("#employers").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this employer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/employers/" + button.attr("data-movie-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}
